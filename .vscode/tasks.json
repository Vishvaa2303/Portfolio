{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Open Portfolio in Browser",
			"type": "shell",
			"command": "start",
			"args": [
				"index.html"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Start Live Server (Python)",
			"type": "shell",
			"command": "python",
			"args": ["-m", "http.server", "8000"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Live Server (Node.js)",
			"type": "shell",
			"command": "npx",
			"args": ["live-server", "--port=8000", "--open=/"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"isBackground": true,
			"problemMatcher": []
		}
	]
}